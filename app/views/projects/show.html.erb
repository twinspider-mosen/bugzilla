<h1><%=@project.title%></h1>
<p><%=@project.description%></p>

<% if current_user.manager? %>
<h3>Assigned Users</h3>
<p>
	<%@project.user.each do |usr|%>
	<li><%= usr.email%></li>
	<%end%>

	<p> <%= link_to "Edit", edit_project_path(@project)%></p>
<p>
	 <%= link_to "Delete Project", project_path(@project), data: {
	turbo_method: :delete,
	turbo_confirm: "Are you sure?"

}%>
</p>

</p>




<%end%>
<% if @bugs.empty?%>
<%else%>
<h3>Bug Found!</h3>

<p> <% @bugs.each do |bug|%>
	<div>
Status: <%=  bug.status.humanize %><br>
		Title: <%= link_to bug.title, bug %><br>Description: <%= bug.body %> <br> Created by: <%= bug.qa.email %>  

		
	</div>	<hr/>
	<%end%>
</p>	

<%end%>



