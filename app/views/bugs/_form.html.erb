<%= form_with model: @bug do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
      <% @bug.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
      <% @bug.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

   <div>
    <%= form.label :developer_id, 'Assign Developer' %><br>
    <% @developers.each do |developer| %>
      <%= form.radio_button :developer_id, developer.id %>
      <%= form.label "developer_#{developer.id}", developer.email %><br>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
